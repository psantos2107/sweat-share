      fetch(`/sessions`, { method: "DELETE" })
        .then((res) => {
          if (!response.ok) {
            throw new Error("Failed to sign out.");
          }
          window.location.href = "/";
        })
        .catch((err) => {
          console.log(err);
        });
    }
  </script>
</html>
